<% @pics.each do |pic| %>
  <%= image_tag pic.image.url(:medium) %>
  <br>
    <%= pic.description %>
    <%= pic.user.email if pic.user %>
    <%= link_to 'Show', pic_path(pic) %>
    <br>
    <br>
    <%= link_to 'Upvote Picture!', vote_up_pic_path(pic) , class: "btn btn-primary btn-large" %>
      <% if pic.user == current_user %>
        <%= link_to 'Edit', edit_pic_path(pic) %>
        <%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
<br>
<br>
<% if user_signed_in? %>
  <%= link_to 'Upload Picture', new_pic_path %>
<% end %>